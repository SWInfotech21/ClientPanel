{
  "meta": {
    "options": {
      "linkedFile": "/views/login.ejs",
      "linkedForm": "formLogin"
    },
    "$_GET": [
      {
        "type": "text",
        "fieldName": "Mobile",
        "options": {
          "rules": {
            "core:required": {}
          }
        },
        "name": "mobile"
      },
      {
        "type": "text",
        "options": {
          "rules": {
            "core:required": {}
          }
        },
        "name": "password"
      },
      {
        "type": "text",
        "name": "remember"
      }
    ],
    "$_SERVER": [
      {
        "type": "text",
        "name": "REMOTE_ADDR"
      }
    ]
  },
  "exec": {
    "steps": {
      "name": "",
      "module": "core",
      "action": "trycatch",
      "options": {
        "try": {
          "steps": [
            {
              "name": "getSalt",
              "module": "dbconnector",
              "action": "single",
              "options": {
                "connection": "postgres_gcpServer",
                "sql": {
                  "type": "SELECT",
                  "columns": [
                    {
                      "table": "m_users",
                      "column": "salt",
                      "alias": "saltvalue"
                    },
                    {
                      "table": "m_users",
                      "column": "user_tpin"
                    },
                    {
                      "table": "m_users",
                      "column": "id"
                    },
                    {
                      "table": "m_users",
                      "column": "md_id"
                    },
                    {
                      "table": "m_users",
                      "column": "ds_id"
                    },
                    {
                      "table": "m_users",
                      "column": "user_type"
                    }
                  ],
                  "table": {
                    "name": "m_users"
                  },
                  "joins": [],
                  "query": "SELECT salt AS saltvalue, user_tpin, id, md_id, ds_id, user_type\nFROM m_users\nWHERE user_mobile = :P1 /* {{$_GET.mobile}} */",
                  "params": [
                    {
                      "operator": "equal",
                      "type": "expression",
                      "name": ":P1",
                      "value": "{{$_GET.mobile}}"
                    }
                  ],
                  "wheres": {
                    "condition": "AND",
                    "rules": [
                      {
                        "id": "m_users.user_mobile",
                        "field": "m_users.user_mobile",
                        "type": "string",
                        "operator": "equal",
                        "value": "{{$_GET.mobile}}",
                        "data": {
                          "table": "m_users",
                          "column": "user_mobile",
                          "type": "text"
                        },
                        "operation": "="
                      }
                    ],
                    "conditional": null,
                    "valid": true
                  }
                }
              },
              "output": false,
              "meta": [
                {
                  "type": "text",
                  "name": "saltvalue"
                },
                {
                  "type": "text",
                  "name": "user_tpin"
                },
                {
                  "type": "number",
                  "name": "id"
                },
                {
                  "type": "text",
                  "name": "md_id"
                },
                {
                  "type": "text",
                  "name": "ds_id"
                },
                {
                  "type": "number",
                  "name": "user_type"
                }
              ],
              "outputType": "object"
            },
            {
              "name": "",
              "module": "core",
              "action": "condition",
              "options": {
                "if": "{{getSalt.saltvalue}}",
                "then": {
                  "steps": [
                    {
                      "name": "GetMdt",
                      "module": "dbconnector",
                      "action": "single",
                      "options": {
                        "connection": "postgres_gcpServer",
                        "sql": {
                          "type": "SELECT",
                          "columns": [
                            {
                              "table": "m_users",
                              "column": "id",
                              "alias": "countmdt",
                              "aggregate": "COUNT"
                            }
                          ],
                          "table": {
                            "name": "m_users"
                          },
                          "joins": [],
                          "groupBy": [],
                          "wheres": {
                            "condition": "AND",
                            "rules": [
                              {
                                "id": "m_users.id",
                                "field": "m_users.id",
                                "type": "double",
                                "operator": "equal",
                                "value": "{{getSalt.md_id.toNumber()}}",
                                "data": {
                                  "table": "m_users",
                                  "column": "id",
                                  "type": "number"
                                },
                                "operation": "="
                              },
                              {
                                "id": "m_users.u_status",
                                "field": "m_users.u_status",
                                "type": "string",
                                "operator": "equal",
                                "value": "1",
                                "data": {
                                  "table": "m_users",
                                  "column": "u_status",
                                  "type": "text"
                                },
                                "operation": "="
                              }
                            ],
                            "conditional": null,
                            "valid": true
                          },
                          "query": "SELECT COUNT(id) AS countmdt\nFROM m_users\nWHERE id = :P1 /* {{getSalt.md_id.toNumber()}} */ AND u_status = '1'",
                          "params": [
                            {
                              "operator": "equal",
                              "type": "expression",
                              "name": ":P1",
                              "value": "{{getSalt.md_id.toNumber()}}"
                            }
                          ]
                        }
                      },
                      "output": false,
                      "meta": [
                        {
                          "type": "number",
                          "name": "countmdt"
                        }
                      ],
                      "outputType": "object"
                    },
                    {
                      "name": "",
                      "module": "core",
                      "action": "condition",
                      "options": {
                        "if": "{{GetMdt.countmdt > 0 || getSalt.md_id.toNumber() == 0}}",
                        "then": {
                          "steps": [
                            {
                              "name": "GetDt",
                              "module": "dbconnector",
                              "action": "single",
                              "options": {
                                "connection": "postgres_gcpServer",
                                "sql": {
                                  "type": "SELECT",
                                  "columns": [
                                    {
                                      "table": "m_users",
                                      "column": "id",
                                      "alias": "countdt",
                                      "aggregate": "COUNT"
                                    }
                                  ],
                                  "table": {
                                    "name": "m_users"
                                  },
                                  "joins": [],
                                  "groupBy": [],
                                  "wheres": {
                                    "condition": "AND",
                                    "rules": [
                                      {
                                        "id": "m_users.id",
                                        "field": "m_users.id",
                                        "type": "double",
                                        "operator": "equal",
                                        "value": "{{getSalt.ds_id.toNumber()}}",
                                        "data": {
                                          "table": "m_users",
                                          "column": "id",
                                          "type": "number"
                                        },
                                        "operation": "="
                                      },
                                      {
                                        "id": "m_users.u_status",
                                        "field": "m_users.u_status",
                                        "type": "string",
                                        "operator": "equal",
                                        "value": "1",
                                        "data": {
                                          "table": "m_users",
                                          "column": "u_status",
                                          "type": "text"
                                        },
                                        "operation": "="
                                      }
                                    ],
                                    "conditional": null,
                                    "valid": true
                                  },
                                  "query": "SELECT COUNT(id) AS countdt\nFROM m_users\nWHERE id = :P1 /* {{getSalt.ds_id.toNumber()}} */ AND u_status = '1'",
                                  "params": [
                                    {
                                      "operator": "equal",
                                      "type": "expression",
                                      "name": ":P1",
                                      "value": "{{getSalt.ds_id.toNumber()}}"
                                    }
                                  ]
                                }
                              },
                              "output": false,
                              "meta": [
                                {
                                  "type": "number",
                                  "name": "countdt"
                                }
                              ],
                              "outputType": "object"
                            },
                            {
                              "name": "",
                              "module": "core",
                              "action": "condition",
                              "options": {
                                "if": "{{GetDt.countdt > 0 || getSalt.ds_id.toNumber() == 0}}",
                                "then": {
                                  "steps": [
                                    {
                                      "name": "identity",
                                      "module": "auth",
                                      "action": "login",
                                      "options": {
                                        "provider": "securityAndroid",
                                        "password": "{{$_GET.password.sha256(getSalt.saltvalue)}}",
                                        "username": "{{$_GET.mobile}}"
                                      },
                                      "output": true,
                                      "meta": []
                                    },
                                    {
                                      "name": "user_type",
                                      "module": "core",
                                      "action": "setvalue",
                                      "options": {
                                        "value": "{{getSalt.user_type}}"
                                      },
                                      "meta": [],
                                      "outputType": "number",
                                      "output": true
                                    },
                                    {
                                      "name": "insert",
                                      "module": "dbupdater",
                                      "action": "insert",
                                      "options": {
                                        "connection": "postgres_gcpServer",
                                        "sql": {
                                          "type": "insert",
                                          "values": [
                                            {
                                              "table": "t_login_history",
                                              "column": "user_id",
                                              "type": "text",
                                              "value": "{{getSalt.id}}"
                                            },
                                            {
                                              "table": "t_login_history",
                                              "column": "ip_address",
                                              "type": "text",
                                              "value": "{{$_SERVER.REMOTE_ADDR}}"
                                            },
                                            {
                                              "table": "t_login_history",
                                              "column": "login_time",
                                              "type": "datetime",
                                              "value": "{{NOW}}"
                                            }
                                          ],
                                          "table": "t_login_history",
                                          "returning": "id",
                                          "query": "INSERT INTO t_login_history\n(user_id, ip_address, login_time) VALUES (:P1 /* {{getSalt.id}} */, :P2 /* {{$_SERVER.REMOTE_ADDR}} */, :P3 /* {{NOW}} */)",
                                          "params": [
                                            {
                                              "name": ":P1",
                                              "type": "expression",
                                              "value": "{{getSalt.id}}"
                                            },
                                            {
                                              "name": ":P2",
                                              "type": "expression",
                                              "value": "{{$_SERVER.REMOTE_ADDR}}"
                                            },
                                            {
                                              "name": ":P3",
                                              "type": "expression",
                                              "value": "{{NOW}}"
                                            }
                                          ]
                                        }
                                      },
                                      "meta": [
                                        {
                                          "name": "identity",
                                          "type": "text"
                                        },
                                        {
                                          "name": "affected",
                                          "type": "number"
                                        }
                                      ],
                                      "output": false
                                    },
                                    {
                                      "name": "Success",
                                      "module": "core",
                                      "action": "response",
                                      "options": {
                                        "status": 200,
                                        "data": "Success Login"
                                      },
                                      "output": true,
                                      "disabled": true
                                    }
                                  ]
                                },
                                "else": {
                                  "steps": {
                                    "name": "DtInactive",
                                    "module": "core",
                                    "action": "response",
                                    "options": {
                                      "status": 403,
                                      "data": "Your Distributor(DT) inactive, Please contact technical support team"
                                    },
                                    "output": true
                                  }
                                }
                              },
                              "outputType": "boolean"
                            }
                          ]
                        },
                        "else": {
                          "steps": {
                            "name": "MdtInactive",
                            "module": "core",
                            "action": "response",
                            "options": {
                              "status": 403,
                              "data": "Your Master Distributor(MDT) inactive, Please contact technical support team"
                            },
                            "output": true
                          }
                        }
                      },
                      "outputType": "boolean"
                    }
                  ]
                },
                "else": {
                  "steps": {
                    "name": "LoginRes403",
                    "module": "core",
                    "action": "response",
                    "options": {
                      "status": 403,
                      "data": "User does not exists or user inactive, Please contact technical support team"
                    },
                    "output": true
                  }
                }
              },
              "outputType": "boolean",
              "output": false
            }
          ]
        },
        "catch": {
          "steps": {
            "name": "Unauth",
            "module": "core",
            "action": "response",
            "options": {
              "status": 401,
              "data": "Unauthorized Access"
            },
            "output": true
          }
        }
      }
    }
  }
}