{
  "meta": {
    "options": {
      "linkedFile": "/views/login.ejs",
      "linkedForm": "formForgotPass"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "forgot_mobile",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "forgot_mobile"
      },
      {
        "type": "text",
        "name": "sms_message"
      },
      {
        "type": "text",
        "name": "response"
      },
      {
        "type": "number",
        "name": "user_id"
      }
    ],
    "$_SERVER": [
      {
        "type": "text",
        "name": "REMOTE_ADDR"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "identity",
        "module": "auth",
        "action": "identify",
        "options": {
          "provider": "security"
        },
        "output": false,
        "meta": []
      },
      {
        "name": "CheckUser",
        "module": "dbconnector",
        "action": "single",
        "options": {
          "connection": "postgres_gcpServer",
          "sql": {
            "type": "SELECT",
            "columns": [
              {
                "table": "m_users",
                "column": "user_mobile"
              }
            ],
            "table": {
              "name": "m_users"
            },
            "joins": [],
            "query": "SELECT user_mobile\nFROM m_users\nWHERE user_mobile = :P1 /* {{$_POST.forgot_mobile}} */ AND u_status = '1' AND updated_by IS NOT NULL",
            "params": [
              {
                "operator": "equal",
                "type": "expression",
                "name": ":P1",
                "value": "{{$_POST.forgot_mobile}}"
              }
            ],
            "wheres": {
              "condition": "AND",
              "rules": [
                {
                  "id": "m_users.user_mobile",
                  "field": "m_users.user_mobile",
                  "type": "string",
                  "operator": "equal",
                  "value": "{{$_POST.forgot_mobile}}",
                  "data": {
                    "table": "m_users",
                    "column": "user_mobile",
                    "type": "text"
                  },
                  "operation": "="
                },
                {
                  "id": "m_users.u_status",
                  "field": "m_users.u_status",
                  "type": "string",
                  "operator": "equal",
                  "value": "1",
                  "data": {
                    "table": "m_users",
                    "column": "u_status",
                    "type": "text"
                  },
                  "operation": "="
                },
                {
                  "id": "m_users.updated_by",
                  "field": "m_users.updated_by",
                  "type": "string",
                  "operator": "is_not_null",
                  "value": null,
                  "data": {
                    "table": "m_users",
                    "column": "updated_by",
                    "type": "text"
                  },
                  "operation": "IS NOT NULL"
                }
              ],
              "conditional": null,
              "valid": true
            }
          }
        },
        "output": false,
        "meta": [
          {
            "type": "text",
            "name": "user_mobile"
          }
        ],
        "outputType": "object"
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{CheckUser.user_mobile>0}}",
          "then": {
            "steps": {
              "name": "",
              "module": "core",
              "action": "condition",
              "options": {
                "if": "{{$_POST.forgot_mobile}}",
                "then": {
                  "steps": [
                    {
                      "name": "OTP",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{NOW.formatDate(\"sshhmm\")}}"
                      },
                      "meta": [],
                      "outputType": "text",
                      "output": false
                    },
                    {
                      "name": "mobile_session",
                      "module": "core",
                      "action": "setsession",
                      "options": {
                        "value": "{{$_POST.forgot_mobile}}"
                      },
                      "output": false
                    },
                    {
                      "name": "otp_session",
                      "module": "core",
                      "action": "setsession",
                      "options": {
                        "value": "{{OTP}}"
                      },
                      "output": false
                    },
                    {
                      "name": "apiOTP",
                      "module": "api",
                      "action": "send",
                      "options": {
                        "url": "https://mobicomm.dove-sms.com//submitsms.jsp",
                        "params": {
                          "user": "{{'Bucks'}}",
                          "key": "{{'797b4459a9XX'}}",
                          "mobile": "{{$_POST.forgot_mobile}}",
                          "message": "{{'your One Time Password is: '+OTP+' Thank You'}}",
                          "senderid": "{{'BUCKSP'}}",
                          "accusage": "1"
                        },
                        "passErrors": false
                      },
                      "output": false
                    },
                    {
                      "name": "api_status",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{apiOTP.status}}"
                      },
                      "meta": [],
                      "outputType": "text"
                    },
                    {
                      "name": "api_response",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{apiOTP.data}}"
                      },
                      "meta": [],
                      "outputType": "text"
                    },
                    {
                      "name": "RecordSmsLog",
                      "module": "dbupdater",
                      "action": "insert",
                      "options": {
                        "connection": "postgres_gcpServer",
                        "sql": {
                          "type": "insert",
                          "values": [
                            {
                              "table": "t_sms_log",
                              "column": "sms_message",
                              "type": "text",
                              "value": "{{$_POST.sms_message}}"
                            },
                            {
                              "table": "t_sms_log",
                              "column": "sender_mobile",
                              "type": "text",
                              "value": "{{$_POST.forgot_mobile}}"
                            },
                            {
                              "table": "t_sms_log",
                              "column": "created_on",
                              "type": "datetime",
                              "value": "{{NOW}}"
                            },
                            {
                              "table": "t_sms_log",
                              "column": "sms_type",
                              "type": "text",
                              "value": "{{'Forgot Password OTP'}}"
                            },
                            {
                              "table": "t_sms_log",
                              "column": "ip_address",
                              "type": "text",
                              "value": "{{$_SERVER.REMOTE_ADDR}}"
                            },
                            {
                              "table": "t_sms_log",
                              "column": "status",
                              "type": "boolean",
                              "value": "{{api_status == 200 ? 1 : 0}}"
                            },
                            {
                              "table": "t_sms_log",
                              "column": "response",
                              "type": "text",
                              "value": "{{api_response}}"
                            },
                            {
                              "table": "t_sms_log",
                              "column": "user_id",
                              "type": "number",
                              "value": "{{identity}}"
                            }
                          ],
                          "table": "t_sms_log",
                          "returning": "id",
                          "query": "INSERT INTO t_sms_log\n(sms_message, sender_mobile, created_on, sms_type, ip_address, status, response, user_id) VALUES (:P1 /* {{$_POST.sms_message}} */, :P2 /* {{$_POST.forgot_mobile}} */, :P3 /* {{NOW}} */, :P4 /* {{'Forgot Password OTP'}} */, :P5 /* {{$_SERVER.REMOTE_ADDR}} */, :P6 /* {{api_status == 200 ? 1 : 0}} */, :P7 /* {{api_response}} */, :P8 /* {{identity}} */)",
                          "params": [
                            {
                              "name": ":P1",
                              "type": "expression",
                              "value": "{{$_POST.sms_message}}"
                            },
                            {
                              "name": ":P2",
                              "type": "expression",
                              "value": "{{$_POST.forgot_mobile}}"
                            },
                            {
                              "name": ":P3",
                              "type": "expression",
                              "value": "{{NOW}}"
                            },
                            {
                              "name": ":P4",
                              "type": "expression",
                              "value": "{{'Forgot Password OTP'}}"
                            },
                            {
                              "name": ":P5",
                              "type": "expression",
                              "value": "{{$_SERVER.REMOTE_ADDR}}"
                            },
                            {
                              "name": ":P6",
                              "type": "expression",
                              "value": "{{api_status == 200 ? 1 : 0}}"
                            },
                            {
                              "name": ":P7",
                              "type": "expression",
                              "value": "{{api_response}}"
                            },
                            {
                              "name": ":P8",
                              "type": "expression",
                              "value": "{{identity}}"
                            }
                          ]
                        }
                      },
                      "meta": [
                        {
                          "name": "identity",
                          "type": "text"
                        },
                        {
                          "name": "affected",
                          "type": "number"
                        }
                      ],
                      "output": false
                    }
                  ]
                }
              },
              "outputType": "boolean"
            }
          },
          "else": {
            "steps": {
              "name": "UserRes",
              "module": "core",
              "action": "response",
              "options": {
                "status": 403,
                "data": "User does not exists"
              },
              "output": true
            }
          }
        },
        "outputType": "boolean"
      }
    ]
  }
}