{
  "meta": {
    "options": {
      "linkedFile": "/views/login.ejs",
      "linkedForm": "formForgotPass"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "forgot_mobile",
        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "forgot_mobile"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "CheckUser",
        "module": "dbconnector",
        "action": "single",
        "options": {
          "connection": "postgres_gcpServer",
          "sql": {
            "type": "SELECT",
            "columns": [
              {
                "table": "m_users",
                "column": "user_mobile"
              }
            ],
            "table": {
              "name": "m_users"
            },
            "joins": [],
            "query": "SELECT user_mobile\nFROM m_users\nWHERE user_mobile = :P1 /* {{$_POST.forgot_mobile}} */ AND u_status = '1' AND updated_by IS NOT NULL",
            "params": [
              {
                "operator": "equal",
                "type": "expression",
                "name": ":P1",
                "value": "{{$_POST.forgot_mobile}}"
              }
            ],
            "wheres": {
              "condition": "AND",
              "rules": [
                {
                  "id": "m_users.user_mobile",
                  "field": "m_users.user_mobile",
                  "type": "string",
                  "operator": "equal",
                  "value": "{{$_POST.forgot_mobile}}",
                  "data": {
                    "table": "m_users",
                    "column": "user_mobile",
                    "type": "text"
                  },
                  "operation": "="
                },
                {
                  "id": "m_users.u_status",
                  "field": "m_users.u_status",
                  "type": "string",
                  "operator": "equal",
                  "value": "1",
                  "data": {
                    "table": "m_users",
                    "column": "u_status",
                    "type": "text"
                  },
                  "operation": "="
                },
                {
                  "id": "m_users.updated_by",
                  "field": "m_users.updated_by",
                  "type": "string",
                  "operator": "is_not_null",
                  "value": null,
                  "data": {
                    "table": "m_users",
                    "column": "updated_by",
                    "type": "text"
                  },
                  "operation": "IS NOT NULL"
                }
              ],
              "conditional": null,
              "valid": true
            }
          }
        },
        "output": false,
        "meta": [
          {
            "type": "text",
            "name": "user_mobile"
          }
        ],
        "outputType": "object"
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{CheckUser.user_mobile>0}}",
          "then": {
            "steps": {
              "name": "",
              "module": "core",
              "action": "condition",
              "options": {
                "if": "{{$_POST.forgot_mobile}}",
                "then": {
                  "steps": [
                    {
                      "name": "OTP",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "value": "{{NOW.formatDate(\"sshhmm\")}}"
                      },
                      "meta": [],
                      "outputType": "text",
                      "output": false
                    },
                    {
                      "name": "mobile_session",
                      "module": "core",
                      "action": "setsession",
                      "options": {
                        "value": "{{$_POST.forgot_mobile}}"
                      },
                      "output": false
                    },
                    {
                      "name": "otp_session",
                      "module": "core",
                      "action": "setsession",
                      "options": {
                        "value": "{{OTP}}"
                      },
                      "output": false
                    },
                    {
                      "name": "apiOTP",
                      "module": "api",
                      "action": "send",
                      "options": {
                        "url": "http://mobicomm.dove-sms.com//submitsms.jsp",
                        "params": {
                          "user": "{{'BucksPay'}}",
                          "key": "{{'71ae0664a8XX'}}",
                          "mobile": "{{$_POST.forgot_mobile}}",
                          "message": "{{OTP+'  is your OTP'}}",
                          "senderid": "{{'BUCKSP'}}",
                          "accusage": "6"
                        },
                        "passErrors": false
                      },
                      "output": true
                    }
                  ]
                }
              },
              "outputType": "boolean"
            }
          },
          "else": {
            "steps": {
              "name": "UserRes",
              "module": "core",
              "action": "response",
              "options": {
                "status": 403,
                "data": "User does not exists"
              },
              "output": true
            }
          }
        },
        "outputType": "boolean"
      }
    ]
  }
}