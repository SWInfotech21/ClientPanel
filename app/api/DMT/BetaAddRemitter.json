{
    "meta": {
        "options": {
            "linkedFile": "/views/dmt-service.ejs",
            "linkedForm": "formAddRem"
        },
        "$_POST": [
            {
                "type": "text",
                "fieldName": "RemMobileAdd",
                "options": {
                    "rules": {
                        "core:required": {
                            "param": ""
                        },
                        "core:number": {
                            "param": ""
                        }
                    }
                },
                "name": "RemMobileAdd"
            },
            {
                "type": "text",
                "fieldName": "RemNameAdd",
                "options": {
                    "rules": {
                        "core:required": {
                            "param": ""
                        }
                    }
                },
                "name": "RemNameAdd"
            },
            {
                "type": "number",
                "fieldName": "RemPINAdd",
                "options": {
                    "rules": {}
                },
                "name": "RemPINAdd"
            },
            {
                "type": "text",
                "fieldName": "RemOTP",
                "options": {
                    "rules": {}
                },
                "name": "RemOTP"
            },
            {
                "type": "number",
                "name": "rem_pin_code"
            }
        ]
    },
    "exec": {
        "steps": [
            {
                "name": "",
                "module": "auth",
                "action": "restrict",
                "options": {
                    "provider": "security",
                    "permissions": [
                        "write"
                    ],
                    "loginUrl": "/login",
                    "forbiddenUrl": "/403-forbidden"
                }
            },
            {
                "name": "GetAPIForward",
                "module": "dbconnector",
                "action": "single",
                "options": {
                    "connection": "postgres_gcpServer",
                    "sql": {
                        "type": "SELECT",
                        "columns": [
                            {
                                "table": "m_api",
                                "column": "api_code"
                            },
                            {
                                "table": "m_api",
                                "column": "username"
                            },
                            {
                                "table": "m_api",
                                "column": "api_password"
                            },
                            {
                                "table": "m_api",
                                "column": "api_url"
                            }
                        ],
                        "table": {
                            "name": "m_api_forward"
                        },
                        "joins": [
                            {
                                "table": "m_service",
                                "column": "*",
                                "alias": "ms",
                                "type": "LEFT",
                                "clauses": {
                                    "condition": "AND",
                                    "rules": [
                                        {
                                            "table": "ms",
                                            "column": "id",
                                            "operator": "equal",
                                            "value": {
                                                "table": "m_api_forward",
                                                "column": "service_id"
                                            },
                                            "operation": "="
                                        }
                                    ]
                                },
                                "primary": "id"
                            },
                            {
                                "table": "m_api",
                                "column": "*",
                                "alias": "m_api",
                                "type": "LEFT",
                                "clauses": {
                                    "condition": "AND",
                                    "rules": [
                                        {
                                            "table": "m_api",
                                            "column": "id",
                                            "operator": "equal",
                                            "value": {
                                                "table": "m_api_forward",
                                                "column": "api_id"
                                            },
                                            "operation": "="
                                        }
                                    ]
                                },
                                "primary": "id"
                            }
                        ],
                        "wheres": {
                            "condition": "AND",
                            "rules": [
                                {
                                    "id": "ms.service_name",
                                    "field": "ms.service_name",
                                    "type": "string",
                                    "operator": "equal",
                                    "value": "{{'Money'}}",
                                    "data": {
                                        "table": "ms",
                                        "column": "service_name",
                                        "type": "text",
                                        "columnObj": {
                                            "type": "string",
                                            "primary": false,
                                            "nullable": false,
                                            "name": "service_name"
                                        }
                                    },
                                    "operation": "="
                                }
                            ],
                            "conditional": null,
                            "valid": true
                        },
                        "query": "SELECT m_api.api_code, m_api.username, m_api.api_password, m_api.api_url\nFROM m_api_forward\nLEFT JOIN m_service AS ms ON (ms.id = m_api_forward.service_id) LEFT JOIN m_api AS m_api ON (m_api.id = m_api_forward.api_id)\nWHERE ms.service_name = :P1 /* {{'Money'}} */",
                        "params": [
                            {
                                "operator": "equal",
                                "type": "expression",
                                "name": ":P1",
                                "value": "{{'Money'}}"
                            }
                        ]
                    }
                },
                "output": false,
                "meta": [
                    {
                        "type": "text",
                        "name": "api_code"
                    },
                    {
                        "type": "text",
                        "name": "username"
                    },
                    {
                        "type": "text",
                        "name": "api_password"
                    },
                    {
                        "type": "text",
                        "name": "api_url"
                    }
                ],
                "outputType": "object"
            },
            {
                "name": "",
                "module": "core",
                "action": "condition",
                "options": {
                    "if": "{{GetAPIForward.api_code=='MA'}}",
                    "then": {
                        "steps": [
                            {
                                "name": "api",
                                "module": "api",
                                "action": "send",
                                "options": {
                                    "method": "POST",
                                    "url": "https://apihub.moneyart.in/AddRemitters",
                                    "params": {
                                        "token": "{{GetAPIForward.api_password}}",
                                        "mobileNo": "{{$_POST.RemMobileAdd}}",
                                        "name": "{{$_POST.RemNameAdd}}",
                                        "pinCode": "{{$_POST.RemPINAdd}}",
                                        "otp": "{{$_POST.RemOTP}}"
                                    }
                                },
                                "output": true
                            },
                            {
                                "name": "RemitterAdd",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{api.data}}"
                                },
                                "meta": [],
                                "outputType": "text",
                                "output": true
                            },
                            {
                                "name": "RefNo",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": 0
                                },
                                "meta": [],
                                "outputType": "text",
                                "output": true
                            },
                            {
                                "name": "RemAddStatusCode",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{RemitterAdd.StatusCode}}"
                                },
                                "meta": [],
                                "outputType": "text",
                                "output": true
                            },
                            {
                                "name": "RemAddMessage",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{RemitterAdd.Message}}"
                                },
                                "meta": [],
                                "outputType": "text",
                                "output": true
                            },
                            {
                                "name": "RemAddRemitterCode",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{RemitterAdd.RemitterCode}}"
                                },
                                "meta": [],
                                "outputType": "text",
                                "output": true
                            }
                        ]
                    }
                },
                "outputType": "boolean"
            },
            {
                "name": "",
                "module": "core",
                "action": "condition",
                "options": {
                    "if": "{{GetAPIForward.api_code=='DMEP'}}",
                    "then": {
                        "steps": [
                            {
                                "name": "AuthCode",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{GetAPIForward.api_password}}"
                                },
                                "meta": [],
                                "outputType": "text"
                            },
                            {
                                "name": "MessageCode",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "E06003"
                                },
                                "meta": [],
                                "outputType": "text"
                            },
                            {
                                "name": "ReqId",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{NOW.md5(123456).substr(1, 9)}}"
                                },
                                "meta": [],
                                "outputType": "text"
                            },
                            {
                                "name": "api",
                                "module": "api",
                                "action": "send",
                                "options": {
                                    "method": "POST",
                                    "url": "https://ezymoney.myezypay.in/RemitMoney/mtransfer",
                                    "dataType": "x-www-form-urlencoded",
                                    "data": {
                                        "msg": "{{MessageCode+'~'+AuthCode+'~'+ReqId+'~'+$_POST.RemMobileAdd+'~'+$_POST.RemNameAdd+'~0~0'}}"
                                    }
                                },
                                "output": false
                            },
                            {
                                "name": "RemitterAdd",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{api.data}}"
                                },
                                "meta": [],
                                "outputType": "text",
                                "output": true
                            },
                            {
                                "name": "RefNo",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{RemitterAdd.split('~')[4]}}"
                                },
                                "meta": [],
                                "outputType": "text",
                                "output": true
                            },
                            {
                                "name": "RemAddMessage",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{'OTP Sent: '+RemitterAdd.split('~')[5]}}"
                                },
                                "meta": [],
                                "outputType": "text",
                                "output": true
                            },
                            {
                                "name": "Status",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{RemitterAdd.split('~')[5]}}"
                                },
                                "meta": [],
                                "outputType": "text",
                                "output": false
                            },
                            {
                                "name": "RemAddStatusCode",
                                "module": "core",
                                "action": "setvalue",
                                "options": {
                                    "value": "{{Status=='SUCCESS'?1:2}}"
                                },
                                "meta": [],
                                "outputType": "text",
                                "output": true
                            }
                        ]
                    }
                },
                "outputType": "boolean"
            },
            {
                "name": "",
                "module": "core",
                "action": "condition",
                "options": {
                    "if": "{{RemAddStatusCode==1}}",
                    "then": {
                        "steps": {
                            "name": "AddRemitter",
                            "module": "dbupdater",
                            "action": "insert",
                            "options": {
                                "connection": "postgres_gcpServer",
                                "sql": {
                                    "type": "insert",
                                    "values": [
                                        {
                                            "table": "dmt_remitter",
                                            "column": "remitter_id",
                                            "type": "text",
                                            "value": "{{RemAddRemitterCode}}"
                                        },
                                        {
                                            "table": "dmt_remitter",
                                            "column": "remit_name",
                                            "type": "text",
                                            "value": "{{$_POST.RemNameAdd}}"
                                        },
                                        {
                                            "table": "dmt_remitter",
                                            "column": "remit_mobile",
                                            "type": "text",
                                            "value": "{{$_POST.RemMobileAdd}}"
                                        },
                                        {
                                            "table": "dmt_remitter",
                                            "column": "remit_pin",
                                            "type": "text",
                                            "value": "{{$_POST.RemPINAdd}}",
                                            "condition": "{{$_POST.RemPINAdd}}"
                                        },
                                        {
                                            "table": "dmt_remitter",
                                            "column": "rem_verify",
                                            "type": "boolean",
                                            "value": "{{false}}"
                                        },
                                        {
                                            "table": "dmt_remitter",
                                            "column": "created_on",
                                            "type": "datetime",
                                            "value": "{{NOW}}"
                                        },
                                        {
                                            "table": "dmt_remitter",
                                            "column": "status",
                                            "type": "text",
                                            "value": "{{'Active'}}"
                                        }
                                    ],
                                    "table": "dmt_remitter",
                                    "returning": "id",
                                    "query": "INSERT INTO dmt_remitter\n(remitter_id, remit_name, remit_mobile, remit_pin, rem_verify, created_on, status) VALUES (:P1 /* {{RemAddRemitterCode}} */, :P2 /* {{$_POST.RemNameAdd}} */, :P3 /* {{$_POST.RemMobileAdd}} */, :P4 /* {{$_POST.RemPINAdd}} */, :P5 /* {{false}} */, :P6 /* {{NOW}} */, :P7 /* {{'Active'}} */)",
                                    "params": [
                                        {
                                            "name": ":P1",
                                            "type": "expression",
                                            "value": "{{RemAddRemitterCode}}"
                                        },
                                        {
                                            "name": ":P2",
                                            "type": "expression",
                                            "value": "{{$_POST.RemNameAdd}}"
                                        },
                                        {
                                            "name": ":P3",
                                            "type": "expression",
                                            "value": "{{$_POST.RemMobileAdd}}"
                                        },
                                        {
                                            "name": ":P4",
                                            "type": "expression",
                                            "value": "{{$_POST.RemPINAdd}}"
                                        },
                                        {
                                            "name": ":P5",
                                            "type": "expression",
                                            "value": "{{false}}"
                                        },
                                        {
                                            "name": ":P6",
                                            "type": "expression",
                                            "value": "{{NOW}}"
                                        },
                                        {
                                            "name": ":P7",
                                            "type": "expression",
                                            "value": "{{'Active'}}"
                                        }
                                    ]
                                }
                            },
                            "meta": [
                                {
                                    "name": "identity",
                                    "type": "text"
                                },
                                {
                                    "name": "affected",
                                    "type": "number"
                                }
                            ],
                            "output": true
                        }
                    }
                },
                "outputType": "boolean",
                "disabled": true
            }
        ]
    }
}